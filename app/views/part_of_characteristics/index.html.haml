%ul.pagination
  %li.page-item.prev
    %a.page-link.bc{:href => "/welcome/index"} Главная
  %li.page-item.this
    %a.page-link.active-link{:href => "#"} Части характеристики


.content-wrapper
  .container-fluid
    / Breadcrumbs

  .table-responsive.my_table_style
    %table#dataTable.table.my_table_style
      %caption
        = link_to new_part_of_characteristic_path, class: 'btn button_new' do
          = fa_icon :plus
          = t('headers.part_of_characteristics.new')
      %thead
        %tr
          %th= PartOfCharacteristic.human_attribute_name(:partname)
          %th= PartOfCharacteristic.human_attribute_name(:characteristic_id)
          %th= PartOfCharacteristic.human_attribute_name(:type_of_data)
          %th=  PartOfCharacteristic.human_attribute_name(:result_type)
          %th= PartOfCharacteristic.human_attribute_name(:isweight)
          %th
          %th
          %th

      %tfoot
        %tr
          %th= PartOfCharacteristic.human_attribute_name(:partname)
          %th= PartOfCharacteristic.human_attribute_name(:characteristic_id)
          %th= PartOfCharacteristic.human_attribute_name(:type_of_data)
          %th=  PartOfCharacteristic.human_attribute_name(:result_type)
          %th= PartOfCharacteristic.human_attribute_name(:isweight)
          %th
          %th
          %th

      %tbody
        - @part_of_characteristics.each do |part_of_characteristic|
          %tr
            %td= part_of_characteristic.partname
            %td= (Characteristic.find(part_of_characteristic.characteristic_id)).name
            %td= part_of_characteristic.type_of_data
            %td= part_of_characteristic.result_type
            %td= part_of_characteristic.isweight
            %td
              = link_to part_of_characteristic, class: 'btn button_show' do
                = fa_icon :eye
                = t('buttons.show')
            %td
              = link_to edit_part_of_characteristic_path(part_of_characteristic), class: 'btn button_edit' do
                = fa_icon :edit
                = t('buttons.edit')
            %td
              = link_to part_of_characteristic, method: :delete,
              :data => { :confirm => t('buttons.confirm.part_of_characteristics') },
              class: 'btn button_destroy' do
                = fa_icon :times
                = t('buttons.destroy')

