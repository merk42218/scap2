.content-wrapper
  .container-fluid
    / Breadcrumbs
  %ul.pagination
    %li.page-item
      %a.page-link.bc{:href => "/welcome/index"} Главная
    %li.page-item
      %a.page-link.bc{:href => weights_path} Веса
    %li.page-item
      %a.page-link.active-link{:href => "#"} Просмотр



  .table-responsive.my_table_style
    %table.table
      %thead
        %tr
          %th= Weight.human_attribute_name(:name)
          %th= Weight.human_attribute_name(:weight)
          %th= Weight.human_attribute_name(:part_of_characteristic)

      %tbody
        %tr
          %td= @weight.name
          %td= @weight.weight
          %td= (PartOfCharacteristic.find(@weight.part_of_characteristic_id)).partname




  .col-md-3.col-centre.col-sm-6
    = link_to t('Редактировать'), edit_weight_path(@weight), class: "btn btn-primary buttons"
