
= form_for @information_system do |f|
  = hidden_field_tag(:form_id, :characteristics)
  - if @information_system.errors.any?
    #error_explanation
      %h2= "#{pluralize(@information_system.errors.count, "ошибок")} Не соблюдаются ограничения целостности:"
      %ul
        - @information_system.errors.full_messages.each do |message|
          %li= message

  .container-2.col-md-12.col.xs-12.my_form_style
    %form
      .row
        .col-25
          = f.label :name
        .col-75
          = f.text_field :name,  :placeholder => "Название создаваемой системы"
      .row
        .col-25
          = f.label :timezone
        .col-75
          = f.text_field :timezone
      .row
        .col-md-25
          = f.label :dis_time
        .col-md-75
          = f.number_field :dis_time,  :placeholder => "Шаг дискретизации"
      .row
        .col-md-12
          = link_to_add_characteristic(f, f.object)
      .row#submit_row
        .col-md-12
          = f.submit 'Сохранить', class: 'btn btn-primary'
      = f.fields_for :characteristics do |fn|
        = render('add_characteristic', fn: fn)
